<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<title>{{ page.title }} &mdash; {{ meta.sitename }}</title>
		<meta name="description" content="{{ meta.site_description }}">
		<link rel="stylesheet" href="/themes/default/assets/css/styles.css">
	</head>
	<body class="{{ page.slug }}">
		<header>
			<a href="/" class="logo">{{ meta.sitename }}</a>
			<nav>
				<ul>
					{{# menu }}
					<li><a href="{{ url }}">{{ title }}</a></li>
					{{/ menu }}
				</ul>
			</nav>
			<script>
				(function() {
					var path = window.location.pathname;
					Array.prototype.forEach.call(document.querySelectorAll('nav a'), function(node) {
						if(path == node.getAttribute('href')) {
							node.parentNode.classList.add('active');
						}
					});
				})();
			</script>
		</header>

		<section class="content">
			{{> body }}
		</section>

		<footer>
			<div class="wrap">
				<ul>
					<li><a href="/feeds/rss">RSS</a></li>
					<li><a href="https://twitter.com/{{ meta.global_twitter }}">@{{ meta.global_twitter }}</a></li>
					<li><a href="/admin" title="Administer your site!">Admin area</a></li>
					<li><a href="/" title="Return to my website.">Home</a></li>
				</ul>

				<p>&copy; {{ meta.sitename }}. All rights reserved.</p>
			</div>
		</footer>

		<debug></debug>
	</body>
</html>
